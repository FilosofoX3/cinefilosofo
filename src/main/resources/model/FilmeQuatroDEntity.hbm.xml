<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="model.FilmeQuatroDEntity" table="FilmeQuatroD" schema="cinema">
        <id name="filmeQuatroDId">
            <column name="filme_quatro_d_id" sql-type="mediumint(9)"/>
        </id>
        <property name="valorPoltrona">
            <column name="valor_poltrona" sql-type="decimal(13,2)" precision="13" scale="2" not-null="true"/>
        </property>
        <property name="valorPoltronaInteligente">
            <column name="valor_poltrona_inteligente" sql-type="decimal(13,2)" precision="13" scale="2"
                    not-null="true"/>
        </property>
        <property name="poltrona">
            <column name="poltrona" sql-type="tinyint(1)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>